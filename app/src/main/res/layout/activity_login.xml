<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:gravity="center"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="262dp"
            android:layout_above="@+id/emailLogin"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="96dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="34dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/emailLogin"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_above="@+id/passwordLogin"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="13dp"
            android:background="@color/navy"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/passwordLogin"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_above="@+id/progressBar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="99dp"
            android:layout_marginBottom="24dp"
            android:background="@color/navy"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="Hasło"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_above="@+id/textSignUp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="92dp"
            android:layout_marginEnd="99dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/navy"
            android:gravity="center"
            android:hint="ZALOGUJ SIĘ"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/textSignUp"
            android:layout_width="307dp"
            android:layout_height="30dp"
            android:layout_above="@+id/textForgotPassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="Nie masz konta? Zarejestruj się."
            android:textColor="@color/navy"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textForgotPassword"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="74dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="82dp"
            android:gravity="center"
            android:text="Nie pamiętasz hasła?"
            android:textColor="@color/navy"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_above="@+id/btnLogin"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="173dp"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="19dp"
            android:theme="@style/ProgressBarStyle"
            android:visibility="invisible" />
</RelativeLayout>
